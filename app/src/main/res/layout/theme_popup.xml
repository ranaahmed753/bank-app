<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="1"
    >
<LinearLayout
    android:id="@+id/purpleBack"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:padding="10dp"
    android:background="@drawable/purple_color_back"
    android:layout_weight="0.14"
    android:layout_margin="3dp"
    />
    <LinearLayout
        android:id="@+id/violetBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="10dp"
        android:background="@drawable/violet_color_back"
        android:layout_weight="0.14"
        android:layout_margin="3dp"
        />
    <LinearLayout
        android:id="@+id/lilacBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="10dp"
        android:background="@drawable/lilac_color_back"
        android:layout_weight="0.14"
        android:layout_margin="3dp"
        />
    <LinearLayout
        android:id="@+id/yellowBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="10dp"
        android:background="@drawable/yellow_color_back"
        android:layout_weight="0.14"
        android:layout_margin="3dp"
        />
    <LinearLayout
        android:id="@+id/beigeBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="10dp"
        android:background="@drawable/beige_color_back"
        android:layout_weight="0.14"
        android:layout_margin="3dp"
        />
    <LinearLayout
        android:id="@+id/ltBlueBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="10dp"
        android:background="@drawable/ltblue_color_back"
        android:layout_weight="0.14"
        android:layout_margin="3dp"
        />
    <LinearLayout
        android:id="@+id/greenBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="10dp"
        android:background="@drawable/green_color_back"
        android:layout_weight="0.14"
        android:layout_margin="3dp"
        />

</LinearLayout>
</layout>